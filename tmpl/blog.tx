: cascade "include/layout.tx"

: override content -> {
	<h1>Blog</h1>

	<: for $entries -> $entry { :>
		<article>
			<h1><a href="../archives/<: $entry.filename :>"><: $entry.title :></a></h1>
			<hr />
			<:  $entry.text | mark_raw :>
			<hr />

			<div>
				<: $entry.date :>
			</div>

			<div>
				<a href="../archives/<: $entry.filename :>">Permalink</a>
			</div>
		</article>
		<br />
	<: } :>

: }
